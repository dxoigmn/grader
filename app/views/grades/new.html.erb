<% form_for @grade, :url => student_assignment_question_grade_path(@student, @assignment, @question) do |f| %>
  <%= f.error_messages %>

  <table>
    <tr>
    <% (1..@question.points).each do |value| %>
      <td><%= f.label "value_#{value}", value %></td>
    <% end %>
    </tr>
    <tr>
    <% (1..@question.points).each do |value| %>
      <td><%= f.radio_button :value, value %></td>
    <% end %>
    </tr>
  </table>
  
  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment, :rows => 5 %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
