<h1>Listing grades</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Student</th>
    <th>Value</th>
    <th>Comment</th>
  </tr>

<% @grades.each do |grade| %>
  <tr>
    <td><%=h grade.question_id %></td>
    <td><%=h grade.student_id %></td>
    <td><%=h grade.value %></td>
    <td><%=h grade.comment %></td>
    <td><%= link_to 'Show', grade %></td>
    <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
    <td><%= link_to 'Destroy', grade, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New grade', new_grade_path %>