- form_for(grade, :url => student_assignment_criterion_grade_path(student, assignment, criterion)) do |form|
  
  .errors= form.error_messages
  
  %table
    %tr
      - (1..criterion.points).each do |value|
        %td= form.label("value_#{value}", value)
        
    %tr
      - (1..criterion.points).each do |value|
        %td= form.radio_button(:value, value)
  
  %dl
    %dt= form.label(:comment)
    %dd= form.text_area(:comment, :rows => 5)
  
  
  = form.submit(grade.new_record? ? 'Create' : 'Update')
