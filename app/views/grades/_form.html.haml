.section
  .header
    %h4=h form.object.criterion.title

  .content
    .help= markdown(form.object.criterion.help)

    %dl
      %dt= form.label(:value)
      %dd= form.text_field(:value, :size => 3, :class => 'right') + " / #{form.object.criterion.worth}"

      %dt= form.label(:comment)
      %dd= form.text_area(:comment, :cols => 80, :rows => 20)
