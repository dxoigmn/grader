- form_for([assignment, question]) do |form|
  
  .errors= form.error_messages
  
  %dl.form
    %dt= form.label(:title)
    %dd= form.text_field(:title)
    
    %dt= form.label(:points)
    %dd= form.select(:points, 1..10)
    
    %dt= form.label(:help)
    %dd= form.text_area(:help, :rows => 5)

  = form.submit(question.new_record? ? 'Create' : 'Update')