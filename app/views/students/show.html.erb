<h2><%=h @student.name %></h2>

<p><b>Email:</b> <a href="mailto:<%=h @student.email %>"><%= @student.email %></a></p>

<h3>Assignments</h3>
<ul>
<% @assignments.each do |assignment| %>
  <li><%=link_to assignment.name, student_assignment_path(@student, assignment) %> (<%=h @student.grade(assignment) %>/<%=h assignment.total_points %> points)</li>
<% end %>
</ul>

<%= link_to 'Edit', edit_student_path(@student) %> |
<%= link_to 'Delete', student_path(@student), :confirm => 'Are you sure?', :method => :delete %>