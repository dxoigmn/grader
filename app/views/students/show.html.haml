%h2= link_to('Students', students_path)
%h3=h @student.name

%dl
  %dt= "Email:"
  %dd= mail_to(@student.email)


%h4= 'Assignments'

%ul
  - @assignments.each do |assignment|
    %li= link_to(assignment.name, student_assignment_path(@student, assignment)) + " (#{@student.formatted_grade(assignment)} points)"


= link_to('Edit', edit_student_path(@student))
= link_to('Delete', student_path(@student), :confirm => 'Are you sure?', :method => :delete)
