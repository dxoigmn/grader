!!! XML
!!! Strict
%html{html_attrs}
  %head
    %meta{ :'http-equiv' => 'content-type', :content => 'text/html;charset=UTF-8' }
    %title= 'Grader'
    = stylesheet_link_tag('http://yui.yahooapis.com/2.7.0/build/reset/reset-min.css')
    = stylesheet_link_tag('application', :media => 'all')
    = stylesheet_link_tag('print', :media => 'print')
  %body
    #header
      %h1= 'Grader'

      #nav
        %ul
          - nav_link(:students)
          - nav_link(:assignments)
          - nav_link(:grades)

    - for key, value in flash
      .flash{ :id=> key }= value

    #article
      = yield
